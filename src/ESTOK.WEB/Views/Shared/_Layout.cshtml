<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Estoque</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de Estoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-link">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastro</a>
                        <ul class="dropdown-menu">
                            <li >@Html.ActionLink("Grupos", "GrupoProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Marcas", "MarcaProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Armazenamento", "ArmazenamentoProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Unidade de Medida", "UnidadeProduto", "Cadastro")</li>
                            <li>@Html.ActionLink("Produtos", "Produto", "Cadastro")</li>
                            <li>@Html.ActionLink("Paises", "Pais", "Cadastro")</li>
                            <li>@Html.ActionLink("Estados", "Estado", "Cadastro")</li>
                            <li>@Html.ActionLink("Cidades", "Cidade", "Cadastro")</li>
                            <li>@Html.ActionLink("Fornecedores", "Fornecedor", "Cadastro")</li>
                            <li>@Html.ActionLink("Perfis", "PerfilUsuario", "Cadastro")</li>
                            <li>@Html.ActionLink("Usuarios", "Usuario", "Cadastro")</li>
                        </ul>
                    </li>
                    <li class="navbar-link" >
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operações</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Entrada", "Entrada", "Operacao")</li>
                            <li>@Html.ActionLink("Saída", "Saida", "Operacao")</li>
                            <li>@Html.ActionLink("Perdas", "Perda", "Operacao")</li>
                            <li>@Html.ActionLink("Inventário", "Inventario", "Operacao")</li>
                        </ul>
                    </li>
                    <li class="navbar-link">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Relatórios</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Posição", "Perda", "Relatorio")</li>
                            <li>@Html.ActionLink("Ressuprimento", "Perda", "Relatorio")</li>
                        </ul>
                    </li>
                    <li class="navbar-link">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gráficos</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Entras/Saídas X Mês", "EntradaSaidaMes", "Grafico")</li>
                            <li>@Html.ActionLink("Perdas X Mês", "PerdaMes", "Grafico")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Controle de Estoque</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
